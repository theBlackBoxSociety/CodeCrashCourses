/*
A TREE MADE WITH PATHS
Useful for plotting

*/

startshape Tree

shape Tree
rule        // reguar stem-section
{
 line[]
 Tree [y 1 size 0.99 rotate 1.5]
}

rule 0.05   // change curve direction
{
 Tree [flip 90]
}

rule 0.05   // spawn branches
{
 Tree [s 0.99 r 1.5 flip 90] 
 Tree [s 0.6 r -60]
 Tree [s 0.5 r 60]
}

path line
{
  MOVETO(0, 0)
  LINETO(0, 1)
  STROKE(0.1)[]
}